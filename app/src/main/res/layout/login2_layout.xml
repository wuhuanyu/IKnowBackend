<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login2_name_edit"

        android:hint="@string/login2_name_edit_hint"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login2_name_edit"
        android:hint="@string/login2_passwd_edit_hint"
        android:id="@+id/login2_passwd_edit"/>
    <Button android:layout_below="@id/login2_passwd_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login2_login_btn"
        android:onClick="login"
        android:text="@string/login2_login_btn_text"/>
    <Button style="@style/CommonBtn"
        android:id="@+id/logout_btn"
        android:text="Logout"
        android:layout_below="@id/login2_login_btn">
    </Button>
    <Button
        style="@style/CommonBtn"
        android:id="@+id/btn_signup"
        android:layout_below="@id/btn_signup"
        android:text="SignUp"></Button>
</RelativeLayout>

